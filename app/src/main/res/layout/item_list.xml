                    android:layout_height="match_parent"
                    android:background="@drawable/blackgreen"
                    android:scaleType="fitXY" />

            <TextView
                    android:id="@+id/boxText1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:scrollbarThumbHorizontal="@drawable/bluesquare"
                    android:scrollbarThumbVertical="@drawable/bluesquare"
                    android:textSize="30sp" />
        </FrameLayout>

